@using StreamitMVC.ViewModels.CreateMovieVM
@model CreateMovieVM

<div class="content-inner container-fluid pb-0" id="page_layout">
    <div class="row">
        <div class="col-sm-12 col-lg-10">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <div class="header-title">
                        <h4 class="card-title">Create Movie</h4>
                    </div>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div class="row">
                            <!-- Name -->
                            <div class="form-group col-md-6">
                                <label asp-for="Name" class="form-label">Movie Name</label>
                                <input asp-for="Name" class="form-control" />
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>

                            <!-- Photo -->
                            <div class="form-group col-md-6">
                                <label asp-for="Photo" class="form-label">Photo</label>
                                <input asp-for="Photo" type="file" class="form-control" />
                                <span class="text-danger" asp-validation-for="Photo"></span>
                            </div>

                            <!-- Trailer Video -->
                            <div class="form-group col-md-6 mt-3">
                                <label asp-for="TrailerVideoFile" class="form-label">Trailer Video</label>
                                <input asp-for="TrailerVideoFile" type="file" class="form-control" />
                                <span class="text-danger" asp-validation-for="TrailerVideoFile"></span>
                            </div>

                            <!-- Main Video -->
                            <div class="form-group col-md-6 mt-3">
                                <label asp-for="VideoUrlFile" class="form-label">Full Video</label>
                                <input asp-for="VideoUrlFile" type="file" class="form-control" />
                                <span class="text-danger" asp-validation-for="VideoUrlFile"></span>
                            </div>

                            <!-- Duration -->
                            <div class="form-group col-md-6 mt-3">
                                <label asp-for="Duration" class="form-label">Duration</label>
                                <input asp-for="Duration" class="form-control" />
                                <span class="text-danger" asp-validation-for="Duration"></span>
                            </div>

                            <!-- Director -->
                            <div class="form-group col-md-6 mt-3">
                                <label asp-for="Director" class="form-label">Director</label>
                                <input asp-for="Director" class="form-control" />
                                <span class="text-danger" asp-validation-for="Director"></span>
                            </div>

                            <!-- Country -->
                            <div class="form-group col-md-6 mt-3">
                                <label asp-for="Country" class="form-label">Country</label>
                                <input asp-for="Country" class="form-control" />
                                <span class="text-danger" asp-validation-for="Country"></span>
                            </div>

                            <!-- IMDb Rating -->
                            <div class="form-group col-md-6 mt-3">
                                <label asp-for="ImdbRating" class="form-label">IMDb Rating</label>
                                <input asp-for="ImdbRating" class="form-control" />
                                <span class="text-danger" asp-validation-for="ImdbRating"></span>
                            </div>

                            <!-- Age Restriction -->
                            <div class="form-group col-md-6 mt-3">
                                <label asp-for="AgeRestriction" class="form-label">Age Restriction</label>
                                <input asp-for="AgeRestriction" class="form-control" />
                                <span class="text-danger" asp-validation-for="AgeRestriction"></span>
                            </div>

                            <!-- Release Date -->
                            <div class="form-group col-md-6 mt-3">
                                <label asp-for="ReleaseDate" class="form-label">Release Date</label>
                                <input asp-for="ReleaseDate" type="date" class="form-control" />
                                <span class="text-danger" asp-validation-for="ReleaseDate"></span>
                            </div>

                            <!-- Language -->
                            <div class="form-group col-md-6 mt-3">
                                <label asp-for="LanguageId" class="form-label">Language</label>
                                <select asp-for="LanguageId" class="form-control" asp-items="@(new SelectList(Model.AllLanguages, "Id", "Name"))">
                                    <option disabled selected>Choose language</option>
                                </select>
                                <span class="text-danger" asp-validation-for="LanguageId"></span>
                            </div>

                            <!-- Description -->
                            <div class="form-group col-md-12 mt-3">
                                <label asp-for="Description" class="form-label">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                                <span class="text-danger" asp-validation-for="Description"></span>
                            </div>

                            <!-- Categories -->
                            <div class="form-group col-md-6 mt-3">
                                <label class="form-label">Categories</label>
                                <select asp-for="SelectedCategoryIds" multiple class="form-control">
                                    @foreach (var cat in Model.AllCategories)
                                    {
                                        <option value="@cat.Id">@cat.Name</option>
                                    }
                                </select>
                            </div>

                            <!-- Tags -->
                            <div class="form-group col-md-6 mt-3">
                                <label class="form-label">Tags</label>
                                <select asp-for="SelectedTagIds" multiple class="form-control">
                                    @foreach (var tag in Model.AllTags)
                                    {
                                        <option value="@tag.Id">@tag.Name</option>
                                    }
                                </select>
                            </div>

                            <!-- Actors -->
                            <div class="form-group col-md-12 mt-3">
                                <label class="form-label">Actors</label>
                                <select asp-for="SelectedActorIds" multiple class="form-control">
                                    @foreach (var actor in Model.AllActors)
                                    {
                                        <option value="@actor.Id">@actor.Name @actor.Surname</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="mt-4 text-end">
                            <button type="submit" class="btn btn-primary">Create Movie</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

