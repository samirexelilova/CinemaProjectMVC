@model List<GetHallVM>

@{
    int count = 0;
}

<div class="content-inner container-fluid pb-0" id="page_layout">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">Zal Siyahısı</h4>
                    <a asp-action="Create" class="btn btn-success">Əlavə et</a>
                </div>
                <div class="card-body">
                    <p class="mb-3">
                        Kinoteatr zalları və onların məlumatları.
                    </p>
                    <div class="table-responsive border rounded py-4">
                        <table id="datatable" class="table" data-toggle="data-table">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Zal Adı</th>
                                    <th>Kinoteatr</th>
                                    <th>Tutum</th>
                                    <th>Zal Tipi</th>
                                    <th>Əməliyyatlar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <td>@count</td>
                                        <td>@item.Name</td>
                                        <td>@item.CinemaName</td>
                                        <td>@item.Capacity</td>
                                        <td>@item.HallTypeName</td>
                                        <td>
                                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Düzəliş</a> |
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
