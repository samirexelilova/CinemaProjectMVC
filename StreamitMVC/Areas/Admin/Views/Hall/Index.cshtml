@model List<GetHallVM>

<h2>Hall List</h2>

<table class="table">
    <a asp-area="Admin" asp-controller="hall" asp-action="create" class="btn btn-sm btn-danger">Create</a>

    <thead>
        <tr>
            <th>Name</th>
            <th>Cinema</th>
            <th>Hall Type</th>
            <th>Capacity</th>
            <th>Seats</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hall in Model)
        {
            <tr>
                <td>@hall.Name</td>
                <td>@hall.CinemaName</td>
                <td>@hall.HallTypeName</td>
                <td>@hall.Capacity</td>
                <td>
                    <a asp-area="Admin" asp-controller="Seat" asp-action="Index" asp-route-hallId="@hall.Id" class="btn btn-sm btn-info">View Seats</a>
                    <a asp-controller="hall" asp-action="update" asp-route-id="@hall.Id" class="btn btn-sm btn-warning">Update</a>
                    <a asp-controller="hall" asp-action="delete" asp-route-id="@hall.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
