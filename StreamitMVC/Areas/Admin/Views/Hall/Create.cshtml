@model CreateHallVM

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3><i class="fas fa-plus-circle me-2"></i>Yeni Zal Əlavə Et</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Zalın adı</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CinemaId" class="form-label">Cinema</label>
                            <select asp-for="CinemaId" class="form-select" required>
                                <option value="">-- Kino seçin --</option>
                                @foreach (var cinema in Model.Cinemas)
                                {
                                    <option value="@cinema.Id">@cinema.Name</option>
                                }
                            </select>
                            <span asp-validation-for="CinemaId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Capacity" class="form-label">Tutum</label>
                            <input asp-for="Capacity" class="form-control" type="number" />
                            <span asp-validation-for="Capacity" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Rows" class="form-label">Sıra sayı</label>
                            <input asp-for="Rows" class="form-control" type="number" />
                            <span asp-validation-for="Rows" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SeatsPerRow" class="form-label">Hər sıradakı yer sayı</label>
                            <input asp-for="SeatsPerRow" class="form-control" type="number" />
                            <span asp-validation-for="SeatsPerRow" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="HallTypeId" class="form-label">Zal tipi</label>
                            <select asp-for="HallTypeId" class="form-select" required>
                                <option value="">-- Zal tipi seçin --</option>
                                @foreach (var hallType in Model.HallTypes)
                                {
                                    <option value="@hallType.Id">@hallType.Name</option>
                                }
                            </select>
                            <span asp-validation-for="HallTypeId" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-1"></i>Yarat
                        </button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">Ləğv et</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
