

  @model UpdateSubtitleVM

<div class="content-inner container-fluid pb-0" id="page_layout">
    <div>
        <div class="row">
            <div class="col-sm-12 col-lg-6">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <div class="header-title">
                            <h4 class="card-title">Update Subtitle </h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <form method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="MovieId">Film</label>
                                <select asp-for="MovieId" asp-items="@(new SelectList(Model.AllMovies, "Id", "Name"))" class="form-control">
                                    <option value="">Seçin</option>
                                </select>
                                <span asp-validation-for="MovieId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label for="LanguageId">Dil</label>
                                <select asp-for="LanguageId" asp-items="@(new SelectList(Model.AllLanguages, "Id", "Name"))" class="form-control">
                                    <option value="">Seçin</option>
                                </select>
                                <span asp-validation-for="LanguageId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label>Mövcud fayl</label>
                                <div>
                                    @if (!string.IsNullOrEmpty(Model.ExistedFilePath))
                                    {
                                        <a href="~/assets/subtitles/@Model.ExistedFilePath" target="_blank">Faylı yüklə</a>
                                    }
                                    else
                                    {
                                        <span>Fayl yoxdur</span>
                                    }
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="SubtitleFile">Yeni subtitle faylı (istəyə bağlı)</label>
                                <input asp-for="SubtitleFile" type="file" class="form-control" />
                                <span asp-validation-for="SubtitleFile" class="text-danger"></span>
                            </div>

                            <button type="submit" class="btn btn-primary">Yenilə</button>
                            <a asp-action="Index" class="btn btn-secondary">Geri</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
