@model UpdateTagVM

<div class="content-inner container-fluid pb-0" id="page_layout">
    <div>
        <div class="row">
            <div class="col-sm-12 col-lg-6">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <div class="header-title">
                            <h4 class="card-title">Basic Form</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-action="Update">
                            <div class="form-group">
                                <label class="form-label" asp-for="Name">Name</label>
                                <input asp-for="Name" class="form-control" />
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label asp-for="SelectedMovieIds" class="form-label">Movies</label>
                                <select asp-for="SelectedMovieIds" class="form-control" multiple>
                                    <option disabled>Choose Category</option>
                                    @foreach (var movie in Model.AllMovies)
                                    {
                                        if (Model.SelectedMovieIds != null && Model.SelectedMovieIds.Contains(movie.Id))
                                        {
                                            <option value="@movie.Id" selected="selected">@movie.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@movie.Id">@movie.Name</option>
                                        }
                                    }
                                </select>

                                <span class="text-danger" asp-validation-for="SelectedMovieIds"></span>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
