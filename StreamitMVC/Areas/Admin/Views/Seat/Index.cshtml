@model SeatIndexVM

<style>
    .cinema-container {
        background: linear-gradient(135deg, #000000 0%, #1a1a1a 50%, #2d0a0a 100%);
        min-height: 100vh;
        padding: 20px 0;
    }

    .hall-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(15px);
        border-radius: 20px;
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
        overflow: hidden;
        margin-bottom: 30px;
    }

    .hall-header {
        background: linear-gradient(45deg, #dc2626, #991b1b);
        color: white;
        padding: 25px;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

        .hall-header::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: repeating-linear-gradient(45deg, transparent, transparent 10px, rgba(255, 255, 255, 0.1) 10px, rgba(255, 255, 255, 0.1) 20px);
            animation: slide 20s infinite linear;
        }

    @@keyframes slide {
        0%

    {
        transform: translate(-50%, -50%) rotate(0deg);
    }

    100% {
        transform: translate(-50%, -50%) rotate(360deg);
    }

    }

    .hall-title {
        position: relative;
        z-index: 2;
        font-size: 1.8rem;
        font-weight: 700;
        margin: 0;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    .seat-count {
        position: relative;
        z-index: 2;
        font-size: 1.1rem;
        opacity: 0.9;
        margin-top: 5px;
    }

    .cinema-screen {
        background: linear-gradient(45deg, #1f2937, #000000);
        color: white;
        text-align: center;
        padding: 15px;
        margin: 20px auto 30px;
        border-radius: 50px;
        max-width: 600px;
        box-shadow: 0 10px 30px rgba(220, 38, 38, 0.3);
        position: relative;
    }

        .cinema-screen::before {
            content: '';
            position: absolute;
            top: -5px;
            left: -5px;
            right: -5px;
            bottom: -5px;
            background: linear-gradient(45deg, #dc2626, #991b1b, #7f1d1d, #450a0a);
            border-radius: 55px;
            z-index: -1;
            animation: glow 3s ease-in-out infinite alternate;
        }

    @@keyframes glow {
        from

    {
        opacity: 0.7;
    }

    to {
        opacity: 1;
    }

    }

    .seats-table {
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        margin: 20px;
    }

        .seats-table thead th {
            background: linear-gradient(45deg, #000000, #1f2937);
            color: white;
            font-weight: 600;
            padding: 15px;
            text-align: center;
            border: none;
            font-size: 1.1rem;
        }

        .seats-table tbody th {
            background: linear-gradient(45deg, #dc2626, #991b1b);
            color: white;
            font-weight: 600;
            text-align: center;
            padding: 15px;
            border: none;
            font-size: 1.1rem;
        }

        .seats-table td {
            padding: 10px;
            text-align: center;
            border: 2px solid #f8f9fa;
            vertical-align: middle;
            position: relative;
            transition: all 0.3s ease;
        }

    .seat-cell {
        min-height: 80px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 8px;
        border-radius: 10px;
        transition: all 0.3s ease;
        position: relative;
    }

    .seat-number {
        font-weight: bold;
        font-size: 1.1rem;
        color: white;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
    }

    .add-seat-btn {
        background: linear-gradient(45deg, #dc2626, #991b1b);
        border: none;
        color: white;
        padding: 8px 12px;
        border-radius: 8px;
        font-size: 0.9rem;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(220, 38, 38, 0.3);
    }

        .add-seat-btn:hover {
            background: linear-gradient(45deg, #991b1b, #7f1d1d);
            color: white;
            transform: translateY(-2px);
        }

    .seat-actions {
        display: flex;
        gap: 5px;
        margin-top: 8px;
    }

        .seat-actions .btn {
            padding: 2px 6px;
            font-size: 0.7rem;
            border-radius: 4px;
        }

    .legend {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin: 20px;
        padding: 20px;
        background: rgba(255, 255, 255, 0.9);
        border-radius: 15px;
        flex-wrap: wrap;
    }

    .legend-item {
        display: flex;
        align-items: center;
        gap: 8px;
        padding: 8px 15px;
        background: white;
        border-radius: 25px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

        .legend-item:hover {
            transform: translateY(-2px);
        }

    .legend-color {
        width: 20px;
        height: 20px;
        border-radius: 50%;
        border: 2px solid white;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

    .stats-bar {
        display: flex;
        justify-content: space-around;
        padding: 20px;
        background: linear-gradient(45deg, #1f2937, #000000);
        color: white;
        border-radius: 15px;
        margin: 20px;
    }

    .stat-item {
        text-align: center;
    }

    .stat-number {
        font-size: 2rem;
        font-weight: bold;
        display: block;
    }

    .stat-label {
        font-size: 0.9rem;
        opacity: 0.9;
    }

    .alert {
        margin: 20px;
    }
</style>

<div class="cinema-container">
    <div class="container-fluid">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                <i class="fas fa-check-circle me-2"></i>
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                <i class="fas fa-exclamation-circle me-2"></i>
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="hall-card">
            <div class="hall-header">
                <h2 class="hall-title">
                    <i class="fas fa-theater-masks me-2"></i>
                    @Model.Hall.Name zalı
                </h2>
                <div class="seat-count">
                    <i class="fas fa-chair me-1"></i>
                    Cəmi oturacaq sayı: @Model.Seats.Count
                </div>
                <a asp-action="Update" asp-controller="Hall" asp-route-id="@Model.Hall.Id" class="btn btn-warning mt-3">
                    <i class="fas fa-edit"></i> Zalı redaktə et
                </a>
            </div>

            <div class="stats-bar">
                <div class="stat-item">
                    <span class="stat-number">@Model.Hall.Rows</span>
                    <span class="stat-label">Sıra</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number">@Model.Hall.SeatsPerRow</span>
                    <span class="stat-label">Sıra başına oturacaq</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number">@Model.Seats.Count</span>
                    <span class="stat-label">Mövcud oturacaq</span>
                </div>
                <div class="stat-item">
                    <span class="stat-number">@(Model.Hall.Rows * Model.Hall.SeatsPerRow - Model.Seats.Count)</span>
                    <span class="stat-label">Boş yer</span>
                </div>
            </div>

            <div class="cinema-screen">
                <i class="fas fa-film me-2"></i>
                EKRAN
                <i class="fas fa-film ms-2"></i>
            </div>

            <div class="table-responsive">
                <table class="seats-table table">
                    <thead>
                        <tr>
                            <th>Sıra \ Yer</th>
                            @for (int i = 1; i <= Model.Hall.SeatsPerRow; i++)
                            {
                                <th>@i</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @for (int row = 1; row <= Model.Hall.Rows; row++)
                        {
                            <tr>
                                <th>@row</th>
                                @for (int col = 1; col <= Model.Hall.SeatsPerRow; col++)
                                {
                                    var seat = Model.Seats.FirstOrDefault(s => s.RowNumber == row && s.SeatNumber == col);
                                    <td>
                                        @if (seat != null)
                                        {
                                            <div class="seat-cell" style="background-color: @(GetSeatColor(seat.SeatType.Name))">
                                                <span class="seat-number">@seat.SeatNumber</span>
                                                <div class="seat-actions">
                                                    <a asp-action="Edit" asp-route-id="@seat.Id" class="btn btn-primary btn-sm" title="Redaktə et">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@seat.Id" class="btn btn-danger btn-sm" title="Sil">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <a asp-action="Create" asp-route-hallId="@Model.Hall.Id" asp-route-row="@row" asp-route-number="@col" class="add-seat-btn">
                                                <i class="fas fa-plus me-1"></i>
                                                Oturacaq əlavə et
                                            </a>
                                        }
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="legend">
                <div class="legend-item">
                    <i class="fas fa-info-circle text-primary"></i>
                    <strong>Oturacaq növləri:</strong>
                </div>
                @foreach (var seatType in Model.SeatTypes)
                {
                    <div class="legend-item">
                        <div class="legend-color" style="background-color: @seatType.Color;"></div>
                        <span>@seatType.Name</span>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetSeatColor(string type)
    {
        return type switch
        {
            "Standard" => "#4ade80",   // yaşıl
            "Comfort" => "#60a5fa",    // mavi
            "VIP" => "#facc15",        // sarı
            _ => "#e5e7eb"             // (boz)
        };
    }
}