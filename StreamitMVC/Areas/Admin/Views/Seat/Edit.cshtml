@model SeatEditVM

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg">
                <div class="card-header bg-warning text-dark text-center">
                    <h3><i class="fas fa-edit me-2"></i>Oturacağı Redaktə Et</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Zal:</strong> @Model.HallName <br>
                        <strong>Yerləşmə:</strong> @Model.RowNumber-ci sıra, @Model.SeatNumber-ci yer
                    </div>

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="HallId" />
                        <input type="hidden" asp-for="RowNumber" />
                        <input type="hidden" asp-for="SeatNumber" />
                        <input type="hidden" asp-for="HallName" />

                        <div class="mb-3">
                            <label asp-for="SeatTypeId" class="form-label">
                                <i class="fas fa-chair me-1"></i>Oturacaq Tipi
                            </label>
                            <select asp-for="SeatTypeId" class="form-select" required>
                                <option value="">-- Oturacaq tipi seçin --</option>
                                @foreach (var seatType in Model.SeatTypes)
                                {
                                    <option value="@seatType.Id" selected="@(seatType.Id == Model.SeatTypeId)">
                                        @seatType.Name
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="SeatTypeId" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" asp-route-hallId="@Model.HallId" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Geri qayıt
                            </a>
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save me-1"></i>Dəyişiklikləri saxla
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>