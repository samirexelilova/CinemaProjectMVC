@model Basket
@{
    ViewData["Title"] = "Checkout";
}

<h2>Checkout</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Film</th>
            <th>Yer</th>
            <th>Qiymət</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Session.Movie.Name</td>
                <td>@item.Seat.RowNumber - @item.Seat.SeatNumber</td>
                <td>@item.Price.ToString("0.00") ₼</td>
            </tr>
        }
    </tbody>
</table>

<h4>Toplam məbləğ: @Model.TotalPrice.ToString("0.00") ₼</h4>

<form method="post" asp-action="CreateStripeSession">
    <button class="btn btn-success">Kartla Ödə (Stripe)</button>
</form>
