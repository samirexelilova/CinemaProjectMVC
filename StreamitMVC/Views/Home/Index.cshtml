<section id="parallex" class="parallax-window bg-attachment-fixed"
   style="background:url(@Url.Content($"~/assets/images/movies/popular/{Model.TopMovieOfYear.Photo}")) fixed;">
   <div class="container-fluid h-100">
      <div class="row align-items-center justify-content-center h-100 parallaxt-details">
         <div class="col-xl-5 col-lg-12 col-md-12 r-mb-23">
            <div class="text-start">
               <h2 class="big-font-5 text-uppercase texture-text mb-0">@Model.TopMovieOfYear.Name</h2>
               <div class="d-flex flex-wrap align-items-center r-mb-23 my-4">
                  <div class="slider-ratting d-flex align-items-center">
                     <ul
                        class="ratting-start p-0 m-0 list-inline text-warning d-flex align-items-center justify-content-left">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= Math.Floor(Model.TopMovieOfYear.ImdbRating))
                            {
                                <li><i class="fa fa-star" aria-hidden="true"></i></li>
                            }
                            else if (i - Model.TopMovieOfYear.ImdbRating < 1)
                            {
                                <li><i class="fa fa-star-half" aria-hidden="true"></i></li>
                            }
                            else
                            {
                                <li><i class="fa fa-star-o" aria-hidden="true"></i></li>
                            }
                        }
                     </ul>
                     <span class="text-white ms-2 font-size-14 fw-500">@Model.TopMovieOfYear.ImdbRating</span>
                     <span class="ms-2">
                        <img src="~/assets/images/movies/imdb-logo.svg" alt="imdb logo" class="img-fluid">
                     </span>
                  </div>
                  <span class="badge rounded-0 text-white text-uppercase p-2 mx-3 bg-secondary">@Model.TopMovieOfYear.AgeRestriction+</span>
                  <span class="font-size-14 fw-500">@Model.TopMovieOfYear.Duration.Hours hr : @Model.TopMovieOfYear.Duration.Minutes mins</span>
               </div>
               <h4 class="iq-title mb-2 fw-bold">
                  Movie of the year
               </h4>
               <p class="line-count-2 w-75 mb-5">@Model.TopMovieOfYear.Description</p>
               <div class="parallax-buttons">
                  <div class="iq-button">
                            <a asp-controller="MovieIndex" asp-action="Detail" asp-route-id="@Model.TopMovieOfYear.Id" class="btn text-uppercase position-relative">
                          <span class="button-text">play now</span>
                          <i class="fa-solid fa-play"></i>
                      </a>
                  </div>
               </div>
            </div>
         </div>
         <div class="col-xl-7 col-lg-12 col-md-12 mt-5 mt-xl-0">
            <div class="parallax-img">
                    <a asp-controller="MovieIndex" asp-action="Detail" asp-route-id="@Model.TopMovieOfYear.Id">
                  <img src="@Url.Content($"~/assets/images/movies/popular/{Model.TopMovieOfYear.Photo}")" class="img-fluid w-100" loading="lazy" alt="@Model.TopMovieOfYear.Name">
               </a>
            </div>
         </div>
      </div>
   </div>
</section>

