@model TagDetailVM
<div class="iq-breadcrumb" style="background-image: url(/assets/images/pages/01.webp);">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-sm-12">
                <nav aria-label="breadcrumb" class="text-center">
                    <h2 class="title">Tags</h2>
                    <ol class="breadcrumb justify-content-center">
                        <li class="breadcrumb-item"><a asp-action="Tags" asp-controller="home">Home</a></li>
                        <li class="breadcrumb-item active">Tags</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="section-padding">
    <div class="container-fluid">
        <h4 class="main-title text-capitalize mb-4">Movies tagged with: @Model.Tag.Name</h4>

        <div class="card-style-grid">
            <div class="row row-cols-xl-4 row-cols-md-2 row-cols-1">
                @foreach (var movie in Model.Movies)
                {
                    <div class="col mb-4">
                        <div class="iq-card card-hover">
                            <div class="block-images position-relative w-100">
                                <div class="img-box w-100">
                                    <a asp-controller="MovieIndex" asp-action="Detail" asp-route-id="@movie.Id" class="position-absolute top-0 bottom-0 start-0 end-0"></a>
                                    <img src="~/assets/images/movies/popular/@movie.Photo" alt="@movie.Name" class="img-fluid object-cover w-100 d-block border-0">
                                </div>

                                <div class="card-description with-transition">
                                    <div class="cart-content">
                                        <div class="content-left">
                                            <h5 class="iq-title text-capitalize">
                                                <a asp-controller="MovieIndex" asp-action="Detail" asp-route-id="@movie.Id">@movie.Name</a>
                                            </h5>
                                            <div class="movie-time d-flex align-items-center my-2">
                                                <span class="movie-time-text font-normal">
                                                    @movie.Duration.Hours hr : @movie.Duration.Minutes mins
                                                </span>
                                            </div>
                                        </div>
                                        <div class="watchlist">
                                            <a class="watch-list-not" href="#">
                                                <svg width="10" height="10" viewBox="0 0 24 24" fill="none">
                                                    <path d="M12 4V20M20 12H4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                                                </svg>
                                                <span class="watchlist-label">Watchlist</span>
                                            </a>
                                        </div>
                                    </div>
                                </div>

                                <div class="block-social-info align-items-center">
                                    <ul class="p-0 m-0 d-flex gap-2 music-play-lists">
                                        <li class="share position-relative d-flex align-items-center text-center mb-0">
                                            <span class="w-100 h-100 d-inline-block bg-transparent">
                                                <i class="fas fa-share-alt"></i>
                                            </span>
                                            <div class="share-wrapper">
                                                <div class="share-boxs d-inline-block">
                                                    <svg width="15" height="40" class="share-shape" viewBox="0 0 15 40">
                                                        <path fill-rule="evenodd" clip-rule="evenodd" d="M14.8842 40C6.83 37.28 1 29.35 1 20C1 10.64 6.83 2.71 14.88 0H0V40H14.88Z" fill="#191919"></path>
                                                    </svg>
                                                    <div class="overflow-hidden">
                                                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                                                        <a href="#"><i class="fab fa-twitter"></i></a>
                                                        <a href="#"><i class="fas fa-link"></i></a>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                        <li class="share position-relative d-flex align-items-center text-center mb-0">
                                            <span class="w-100 h-100 d-inline-block bg-transparent">
                                                <i class="fa-regular fa-heart"></i>
                                            </span>
                                            <div class="share-wrapper">
                                                <div class="share-boxs d-inline-block">
                                                    <svg width="15" height="40" class="share-shape" viewBox="0 0 15 40">
                                                        <path fill-rule="evenodd" clip-rule="evenodd" d="M14.8842 40C6.83 37.28 1 29.35 1 20C1 10.64 6.83 2.71 14.88 0H0V40H14.88Z" fill="#191919"></path>
                                                    </svg>
                                                    <div class="overflow-hidden">
                                                        <span>+51</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                    <div class="iq-button">
                                        <a asp-controller="MovieIndex" asp-action="Detail" asp-route-id="@movie.Id" class="btn text-uppercase position-relative rounded-circle">
                                            <i class="fa-solid fa-play ms-0"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<style>
    .breadcrumb-item + .breadcrumb-item::before {
        content: "/";
    }
</style>