@using StreamitMVC.Models
@using StreamitMVC.ViewModels
@model DetailVM

<div class="iq-main-slider site-video">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="pt-0">
                    <video id="my-video" poster="~/assets/images/movies/popular/@Model.Movie.Photo"
                           class="video-js vjs-big-play-centered w-100" controls preload="auto"
                           data-setup='{ "techOrder"["youtube"], "sources"[{ "type""video/youtube", "src""https://www.youtube.com/watch?v=QCGq1epI9pQ"}], "youtube"{ "iv_load_policy"1 } }'>
                        <source src="~/assets/images/video/@Model.Movie.TrailerVideo" type="video/mp4" />
