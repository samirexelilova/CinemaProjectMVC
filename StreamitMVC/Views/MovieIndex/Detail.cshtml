                                <li class="iq-tag-title text-primary mb-0">
                                    <i class="fa fa-tags" aria-hidden="true"></i>
                                    Tags:
                                </li>
                                @foreach (MovieTag item in Model.Movie.MovieTags)
                                {
                                    <li><a class="title" href="view-all-movie.html">@item.Tag.Name</a><span class="text-secondary">,</span></li>
                                }

                            </ul>
                        </div>
