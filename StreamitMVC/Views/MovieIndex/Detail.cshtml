                    </div>
                </div>
                <!-- Movie Description End -->
                <!-- Movie Source Start -->
                <div class="content-details trending-info">
                    <ul class="iq-custom-tab tab-bg-gredient-center d-flex nav nav-pills align-items-center text-center mb-5 justify-content-center list-inline"
                        role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active show" data-bs-toggle="pill"
                               href="#description-01" role="tab" aria-selected="true">
                                Description
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="pill" href="#review-01" role="tab"
                               aria-selected="false">
                                Rate &amp; Review
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="pill" href="#source-01" role="tab"
                               aria-selected="false">
                                Seans
                            </a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div id="description-01" class="tab-pane animated fadeInUp active show"
                             role="tabpanel">
                            <div class="description-content">
                                <p>
                                    Zombie Island is a 1998 direct-to-video animated comedy horror film
                                    based on Hanna-Barbera's Scooby-Doo Saturday-morning cartoons. In the
                                    film, Shaggy, Scooby, Fred, Velma, and Daphne reunite after a
                                    year-long hiatus from Mystery, Inc. to investigate a bayou island said
                                    to be haunted by the ghost of the pirate Morgan Moonscar. The film was
                                    directed by Jim Stenstrum, from a screenplay by Glenn Leopold.
                                </p>
                            </div>
                        </div>
                        <div id="review-01" class="tab-pane animated fadeInUp" role="tabpanel">
                            <div class="streamit-reviews">
                                <div id="comments" class="comments-area validate-form">
                                    @if (Model.Movie.Reviews != null && Model.Movie.Reviews.Any())
                                    {
                                        <div class="comment-list">
                                            @foreach (var review in Model.Movie.Reviews)
                                            {
                                                <div class="single-comment my-3 p-3 border rounded">
                                                    <div class="d-flex justify-content-between">
                                                        <div>
                                                            <strong>@review.User?.Name  @review.User?.Surname </strong>
                                                            <span class="text-muted ms-2">@review.CreatedAt.ToString("dd MMM yyyy")</span>
                                                        </div>
                                                        <div class="text-warning">
                                                            @for (int i = 1; i <= 5; i++)
                                                            {
                                                                if (i <= review.Rating)
                                                                {
                                                                    <i class="fa-solid fa-star"></i>
                                                                }
                                                                else
                                                                {
                                                                    <i class="fa-regular fa-star"></i>
                                                                }
                                                            }
                                                        </div>
                                                    </div>
                                                    <div class="mt-2">
                                                        <p class="mb-0">@review.Comment</p>
                                                    </div>
                                                    <div class="mt-2 d-flex gap-3">
                                                        <form asp-controller="Review" asp-action="Like" asp-route-id="@review.Id" method="post" class="d-inline">
                                                            <button class="btn btn-link p-0 border-0" type="submit">
                                                                <i class="fa-regular fa-thumbs-up"></i> @review.LikeCount
                                                            </button>
                                                        </form>

                                                        <form asp-controller="Review" asp-action="Dislike" asp-route-id="@review.Id" method="post" class="d-inline">
                                                            <button class="btn btn-link p-0 border-0" type="submit">
                                                                <i class="fa-regular fa-thumbs-down"></i> @review.DislikeCount
                                                            </button>
                                                        </form>
                                                    </div>
                                                </div>
                                              
                                            }
                                        </div>
                                    }
                                </div>

                                <div class="review_form">
                                    <div class="comment-respond">
                                        <form asp-controller="Review" asp-action="Create" method="post">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="MovieId" value="@Model.Movie.Id" />

                                            <h3 class="fw-500 my-2">
                                                Be the first to review “@Model.Movie.Name”
                                            </h3>
                                            <p class="comment-notes">
                                                <span>Your email address will not be published.</span>
                                                <span>Required fields are marked<span class="required"> * </span></span>
                                            </p>

                                            <div class="d-flex align-items-center mb-4">
                                                <label class="me-3">Your rating</label>
                                                <div class="star ms-4 text-primary" id="rating-stars">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        <span class="star-icon" data-value="@i">
                                                            <i class="fa-regular fa-star"></i>
                                                        </span>
                                                    }
                                                </div>
                                                <input type="hidden" name="Rating" id="selectedRating" required />
                                            </div>

                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label class="mb-2">Your review <span class="required">*</span></label>
                                                        <textarea class="form-control" name="Comment" cols="5" rows="8" required></textarea>
                                                    </div>
                                                </div>

                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="mb-2">Name <span class="required">*</span></label>
                                                        <input class="form-control" type="text" value="@User.Identity?.Name" disabled />
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="mb-2">Email <span class="required">*</span></label>
                                                        <input class="form-control" type="email" placeholder="Your email" disabled />
                                                    </div>
                                                </div>

                                                <div class="col-md-12">
                                                    <div class="mt-3 d-flex gap-2 align-items-center">
                                                        <input class="form-check-input mt-0" type="checkbox" value id="check1" checked />
                                                        <label class="form-check-label" for="check1">
                                                            Save my name, email, and website in this browser for the next time I comment.
                                                        </label>
                                                    </div>
                                                </div>

                                                <div class="col-md-12">
                                                    <div class="form-submit mt-4">
                                                        <div class="iq-button">
                                                            <button name="submit" type="submit" id="submit"
                                                                    class="btn text-uppercase position-relative" value="Submit">
                                                                <span class="button-text">Submit</span>
                                                                <i class="fa-solid fa-play"></i>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div id="source-01" class="tab-pane animated fadeInUp" role="tabpanel">
                            <div class="source-list-content table-responsive">
                                <table class="table custom-table">
                                    <thead>
                                        <tr>
                                            <th>
                                                Film
                                            </th>
                                            <th>
                                                SEANSLAR
                                            </th>
                                            <th>
                                                KİNOTEATR
                                            </th>
                                            <th>
                                                ZAL
                                            </th>
                                            <th>
                                                FORMAT
                                            </th>
                                            <th>
                                                QİYMƏT
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.SessionPrices)
                                        {
                                            <tr>
                                                <td>@Model.Movie.Name</td>
                                                <td>@item.Session.StartTime.ToString("HH:mm")</td>
                                                <td>@item.Session.Cinema?.Name</td>
                                                <td>@item.Session.Hall?.Name</td>
                                                <td>
                                                    <div style="display: flex; align-items: center; gap: 20px;">

                                                        @*  Orijinal Dil (Seansın dili) *@
                                                        @if (item.Session.Language != null)
                                                        {
                                                            <div style="display: flex; align-items: center; padding: 4px 8px;">
                                                                <img src="~/assets/images/@item.Session.Language.FlagIcon"
                                                                     alt="@item.Session.Language.Name"
                                                                     style="width:30px; height:21px; border-radius: 4px;"
                                                                     onerror="this.style.display='none';" />
                                                            </div>
                                                        }

                                                        @* Subtitrlər (Seansın altyazı dili) *@
                                                        @if (item.Session.Subtitle?.Language != null)
                                                        {
                                                            <div style="display: flex; align-items: center; gap: 6px; font-weight: bold; font-size: 13px; color: black;">
                                                                <span>@item.Session.Subtitle.Language.Code.ToUpper()</span>
                                                            </div>
                                                        }

                                                    </div>
                                                </td>


                                                <td>@item.Price.ToString("0.00") AZN</td>
                                                <td>
                                                    <a asp-area="admin" asp-controller="Booking" asp-action="SelectSeats" asp-route-sessionId="@item.Session.Id" class="btn btn-primary">
                                                        Yerləri Seç
                                                    </a>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Movie Source End -->
            </div>
        </div>
    </div>
</div>

