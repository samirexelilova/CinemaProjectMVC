@{
    ViewData["Title"] = "Qeydiyyat Təsdiqlənməsi";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="fas fa-envelope-circle-check fa-4x text-success"></i>
                    </div>

                    <h2 class="text-success mb-4">Qeydiyyat Uğurla Tamamlandı!</h2>

                    <div class="alert alert-info" role="alert">
                        <i class="fas fa-info-circle"></i>
                        <strong>Email Təsdiqlənməsi Tələb Olunur</strong>
                    </div>

                    <p class="lead mb-4">
                        Email ünvanınıza təsdiqləmə linki göndərildi. Hesabınızı aktivləşdirmək üçün:
                    </p>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="card border-primary">
                                <div class="card-body">
                                    <h5><i class="fas fa-envelope"></i> 1. Addım</h5>
                                    <p>Email qutumuzu yoxlayın</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card border-success">
                                <div class="card-body">
                                    <h5><i class="fas fa-mouse-pointer"></i> 2. Addım</h5>
                                    <p>Təsdiqləmə linkə klik edin</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <p class="text-muted">
                            Email gəlmədi? Spam qovluğunu da yoxlayın.
                        </p>
                    </div>

                    <div class="mt-4">
                        <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt"></i> Giriş səhifəsinə qayıt
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>