@using StreamitMVC.ViewModels.AccountVM
@model LoginVM
@{
    ViewData["Title"] = "Giriş";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Hesaba Giriş</h4>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Info"] != null)
                    {
                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                            <i class="fas fa-info-circle"></i> @TempData["Info"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="Login" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="UsernameOrEmail" class="form-label">İstifadəçi adı və ya Email</label>
                            <input asp-for="UsernameOrEmail" class="form-control" placeholder="İstifadəçi adı və ya email daxil edin" />
                            <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Password" class="form-label">Şifrə</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Şifrənizi daxil edin" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input asp-for="IsPersistent" class="form-check-input" type="checkbox" />
                            <label asp-for="IsPersistent" class="form-check-label">
                                Məni xatırla
                            </label>
                        </div>

                        @if (ViewData.ModelState.ErrorCount > 0)
                        {
                            <div class="alert alert-danger">
                                <ul class="mb-0">
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                </ul>
                            </div>
                        }

                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-sign-in-alt"></i> Giriş
                            </button>
                        </div>
                    </form>

                    <div class="text-center">
                        <a asp-action="ForgotPassword" class="text-decoration-none">
                            <i class="fas fa-key"></i> Şifrəni unutdum?
                        </a>
                    </div>

                    <hr>

                    <div class="text-center">
                        <p class="mb-2">Hesabınız yoxdur?</p>
                        <a asp-action="Register" class="btn btn-outline-primary">
                            <i class="fas fa-user-plus"></i> Qeydiyyatdan keç
                        </a>
                    </div>

                    <div class="mt-3">
                        <div class="card bg-dark">
                            <div class="card-body">
                                <h6>Email təsdiq olunmamış hesab?</h6>
                                <p class="small text-muted mb-2">Əgər email təsdiqləmə linki almamısınızsa:</p>
                                <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#resendEmailModal">
                                    <i class="fas fa-redo"></i> Təsdiqləmə emailini yenidən göndər
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="resendEmailModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Email Təsdiqlənməsi</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="ResendConfirmationEmail" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="resendEmail" class="form-label">Email ünvanınız</label>
                        <input type="email" class="form-control" id="resendEmail" name="email" required
                               placeholder="Email ünvanınızı daxil edin" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Ləğv et</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-paper-plane"></i> Göndər
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

