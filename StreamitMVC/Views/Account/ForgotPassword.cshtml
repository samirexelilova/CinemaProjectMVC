@using StreamitMVC.ViewModels.AccountVM
@model ForgotPasswordVM
@{
    ViewData["Title"] = "Şifrəni Unutdum";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Şifrəni Unutdum</h4>
                </div>
                <div class="card-body">
                    <p class="text-muted">Email ünvanınızı daxil edin, şifrə sıfırlama linki göndərəcəyik.</p>

                    <form asp-action="ForgotPassword" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label">Email ünvanı</label>
                            <input asp-for="Email" class="form-control" placeholder="Email ünvanınızı daxil edin" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane"></i> Şifrə sıfırlama linki göndər
                            </button>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <a asp-action="Login" class="text-decoration-none">
                            <i class="fas fa-arrow-left"></i> Giriş səhifəsinə qayıt
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

